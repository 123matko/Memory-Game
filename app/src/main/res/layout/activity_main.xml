<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark">
<LinearLayout
   android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="5"
    tools:context=".MainActivity"
    android:orientation="vertical"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/app_name"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/button_positive"
        android:shadowColor="@color/text"
        android:text="@string/play" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:background="@color/button_negative"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:shadowColor="@color/text"
        android:id="@+id/exit"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/colection"
        android:background="@color/button_neutral"
       android:layout_gravity="bottom"
    android:id="@+id/colection"
        android:layout_margin="15dp"
        android:shadowColor="@color/text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/colection"
            android:text="@string/colection"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
</LinearLayout>